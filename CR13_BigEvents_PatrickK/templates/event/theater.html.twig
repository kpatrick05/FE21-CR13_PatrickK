{% extends 'base.html.twig' %}



{% block body %}
<div class="container">
<h1 class="color text-center">Theater Events </h1>
    <div class="row">
    {% for event in events %}

   <div class=" mb-5 col col-12 col-sm-12 col-md-6 col-lg-3 d-flex align-items-stretch">
            <div class="row g-1 container-fluid card shadow-lg bg-card-color">
            <div class="";>
            <img style="width:100%; height:220px; object-fit: cover;" src= "{{event.picture}}" class="card-img-top img-fluid" alt="...">
            <div class="card-body">
              <h5 class="card-title">{{event.name}}</h5>
              <hr>
              <p class="card-text">{{event.description}}</p>
              <p class="card-text">{{event.datetime|date('F j, Y, g:i a')}}</p>
              <a href="/edit/{{event.id}}" class="m-1 btn btn-warning">Edit</a>
              <a href="/delete/{{event.id}}" class="m-1 btn btn-danger">Delete</a>
              <a href="/details/{{event.id}}" class="m-1 btn btn-primary">Details</a>

            </div>
            </div>
            </div>
          </div>
    {% endfor  %}
</div>
</div>
{% endblock %}
